[Unit]
Description=Wordpress Quadlet
After=network-online.target

[Container]
Image=docker.io/library/wordpress:fpm
ContainerName=wordpress
AutoUpdate=registry
EnvironmentFile=/etc/containers.environment
Volume=wordpress.volume:/usr/share/www/html
Network=wordpress.network

[Service]
Restart=always
TimeoutStartSec=900

[Install]
WantedBy=caddy.service multi-user.target default.target
